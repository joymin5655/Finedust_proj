<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Information -->
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    <key>CFBundleDisplayName</key>
    <string>AirLens</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    
    <!-- iOS Requirements -->
    <key>LSRequiresIPhoneOS</key>
    <true/>
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
        <string>location-services</string>
        <string>gps</string>
        <string>camera</string>
    </array>
    
    <!-- Supported Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- Privacy Permissions -->
    
    <!-- Location Services -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>AirLens needs your location to show nearby air quality stations and provide localized air quality information.</string>
    
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>AirLens can track air quality changes in your area and send you alerts about air quality changes even when the app is in the background.</string>
    
    <key>NSLocationAlwaysUsageDescription</key>
    <string>AirLens can monitor air quality in your area continuously to provide timely alerts about air quality changes.</string>
    
    <key>NSLocationTemporaryUsageDescriptionDictionary</key>
    <dict>
        <key>NearbyStations</key>
        <string>AirLens needs precise location to find air quality stations within 50km of your location.</string>
    </dict>
    
    <!-- Camera -->
    <key>NSCameraUsageDescription</key>
    <string>AirLens needs camera access to capture photos for AI-based PM2.5 prediction. The camera will analyze atmospheric conditions to estimate air quality.</string>
    
    <!-- Photo Library -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>AirLens needs access to your photo library to select photos for AI-based PM2.5 prediction analysis.</string>
    
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>AirLens needs permission to save analyzed air quality prediction results to your photo library.</string>
    
    <!-- Network -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <!-- Local development -->
            <key>localhost</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
            <key>127.0.0.1</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
            <!-- Production API -->
            <key>airlens-api.onrender.com</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSExceptionRequiresForwardSecrecy</key>
                <false/>
            </dict>
        </dict>
    </dict>
    
    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
        <string>fetch</string>
        <string>processing</string>
        <string>remote-notification</string>
    </array>
    
    <!-- Background Task Identifiers -->
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.airlens.refresh</string>
        <string>com.airlens.prediction</string>
    </array>
    
    <!-- User Interface -->
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleLightContent</string>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>
    <key>UIUserInterfaceStyle</key>
    <string>Dark</string>
    
    <!-- App Category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.weather</string>
    
    <!-- URL Schemes -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.airlens.app</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>airlens</string>
            </array>
        </dict>
    </array>
    
    <!-- Queries Schemes (for opening other apps) -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>maps</string>
        <string>weather</string>
        <string>mailto</string>
    </array>
    
    <!-- Exported Type Declarations -->
    <key>UTExportedTypeDeclarations</key>
    <array>
        <dict>
            <key>UTTypeIdentifier</key>
            <string>com.airlens.prediction</string>
            <key>UTTypeDescription</key>
            <string>AirLens Prediction</string>
            <key>UTTypeConformsTo</key>
            <array>
                <string>public.data</string>
            </array>
            <key>UTTypeTagSpecification</key>
            <dict>
                <key>public.filename-extension</key>
                <array>
                    <string>airlens</string>
                </array>
            </dict>
        </dict>
    </array>
    
    <!-- Minimum iOS Version -->
    <key>MinimumOSVersion</key>
    <string>15.0</string>
    
    <!-- iTunes File Sharing -->
    <key>UIFileSharingEnabled</key>
    <true/>
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
    
    <!-- Appearance -->
    <key>UILaunchScreen</key>
    <dict>
        <key>UIColorName</key>
        <string>LaunchScreenBackground</string>
        <key>UIImageName</key>
        <string>LaunchScreenIcon</string>
    </dict>
</dict>
</plist>